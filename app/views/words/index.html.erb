<h1 xmlns="http://www.w3.org/1999/html">Listing words</h1>

<table>

  <% @words.each do |word| %>
      <tr class="<%= cycle 'list_line_even', 'list_line_odd' %>">

        <td><%= word.word %></td>
        <td><%= word.partofspeech %></td>

        <td class="list_sentence">
          <dl>
            <dt><%= word.meaning %></dt>
            <dd><%= word.sentence %></dd>
          </dl>
        </td>

        <td><%= word.points %></td>
        <td style="background-color: <%= word.color %>  ;"><%= word.color %></td>
        <td ><%= word.price %></td>

        <td class="list_actions">
          <%= link_to 'Show', word %>    <br/>
          <%= link_to 'Edit', edit_word_path(word) %>       <br/>
          <%= link_to 'Destroy', word, method: :delete, data: {confirm: 'Are you sure?'} %>
        </td>
        \

      </tr>
  <% end %>
</table>

<br/>

<%= link_to 'New Word', new_word_path %>

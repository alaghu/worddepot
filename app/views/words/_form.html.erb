      <br/>
      <%= f.text_field :partofspeech %>
    </div>

    <div class="field">
      <%= f.label :meaning %>
      <br/>
      <%= f.text_area :meaning, rows: 4 %>
    </div>

    <div class="field">
      <%= f.label :sentence %>
      <br/>
      <%= f.text_area :sentence, rows: 3 %>
    </div>

    <div class="field">
      <%= f.label :points %>
      <br/>
      <%= f.text_field :points %>
    </div>
    <div class="field">
      <%= f.label :color %>
      <br/>
      <%= f.text_field :color %>
    </div>
    <div class="field">
      <%= f.label :price %>
      <br/>
      <%= f.text_field :price %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>
